{
  "name": "probabilistic-selection-task",
  "version": "2.7.0",
  "parameters": {
    "img_left": {
      "type": "image",
      "default": "__undefined__"
    },
    "img_right": {
      "type": "image",
      "default": "__undefined__"
    },
    "correct_key": {
      "type": "string",
      "default": "right"
    },
    "pair": {
      "type": "string",
      "default": "default"
    },
    "reward_prob": {
      "type": "number",
      "default": 1
    },
    "pool_size": {
      "type": "number",
      "default": null
    },
    "probabilistic": {
      "type": "boolean",
      "default": true
    },
    "symmetrical_feedback": {
      "type": "boolean",
      "default": false
    },
    "show_feedback": {
      "type": "boolean",
      "default": true
    },
    "omit_is_error": {
      "type": "boolean",
      "default": true
    },
    "fixation_min": {
      "type": "number",
      "default": 300
    },
    "fixation_max": {
      "type": "number",
      "default": 800
    },
    "fixation_color": {
      "type": "string",
      "default": "#fff"
    },
    "stimulus_duration": {
      "type": "number",
      "default": 3500
    },
    "selection_duration": {
      "type": "number",
      "default": 500
    },
    "feedback_duration": {
      "type": "number",
      "default": 1500
    },
    "pos_feedback": {
      "type": "function",
      "default": "resp => \"+10\""
    },
    "neg_feedback": {
      "type": "function",
      "default": "resp => \"-10\""
    },
    "warning_feedback": {
      "type": "function",
      "default": "resp => \"Responde más rápido.\""
    },
    "feedback_color_pos": {
      "type": "string",
      "default": "#00AA00"
    },
    "feedback_color_neg": {
      "type": "string",
      "default": "#AA0000"
    },
    "feedback_color_warn": {
      "type": "string",
      "default": "#FFFFFF"
    },
    "show_remain": {
      "type": "boolean",
      "default": true
    },
    "show_total_score": {
      "type": "boolean",
      "default": true
    },
    "border_color_selected": {
      "type": "string",
      "default": "#2196F3"
    },
    "info_color": {
      "type": "string",
      "default": "#fff"
    },
    "feedback_mode": {
      "type": "string",
      "default": "text"
    },
    "feedback_size": {
      "type": "string",
      "default": "auto"
    },
    "info_font_size": {
      "type": "string",
      "default": "2.5vh"
    },
    "info_position_top": {
      "type": "string",
      "default": "5vh"
    },
    "info_position_side": {
      "type": "string",
      "default": "5vw"
    },
    "choices": {
      "type": "string_array",
      "default": [
        "ArrowLeft",
        "ArrowRight"
      ]
    },
    "total_trials": {
      "type": "number",
      "default": null
    }
  },
  "data": {
    "key_press": {
      "type": "string"
    },
    "side_press": {
      "type": "string"
    },
    "rt": {
      "type": "number"
    },
    "correct": {
      "type": "boolean"
    },
    "rewarded": {
      "type": "boolean"
    },
    "trial_score": {
      "type": "number"
    },
    "total_score": {
      "type": "number"
    }
  }
}