{
  "name": "expbuilder",
  "version": "1.0.0",
  "description": "Experiment Builder App",
  "author": "Andr√©s",
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.6.2"
  },
  "main": "main.js",
  "scripts": {
    "electron": "electron .",
    "build:electron": "electron-builder"
  },
  "build": {
    "productName": "ExpBuilder",
    "appId": "com.tuapp.id",
    "publish": [
      {
        "provider": "github",
        "owner": "TU_USUARIO_GITHUB",
        "repo": "TU_REPO"
      }
    ],
    "files": [
      "main.js",
      "client/**",
      "server/**"
    ],
    "icon": "icon/icon.png",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icon/icon.icns",
      "identity": null
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "icon/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "zip"
      ],
      "icon": "icon/icon.png"
    }
  }
}
