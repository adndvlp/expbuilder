{
  "name": "expbuilder",
  "version": "1.0.0",
  "description": "Experiment Builder App",
  "author": {
    "name": "Andrés Pacheco Fabián",
    "email": "andngdv.lpr@gmail.com"
  },
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "main": "main.js",
  "scripts": {
    "electron": "electron .",
    "build:electron": "electron-builder",
    "clean:client": "rimraf client/node_modules client/package-lock.json"
  },
  "build": {
    "productName": "ExpBuilder",
    "appId": "com.tuapp.id",
    "publish": [
      {
        "provider": "github",
        "owner": "adndvlp",
        "repo": "expbuilder"
      }
    ],
    "files": [
      "main.js",
      "oauth-handler.js",
      "preload.js",
      "server/node_modules/**",
      "server/**"
    ],
    "extraResources": [
      {
        "from": "client/dist",
        "to": "client/dist"
      },
      {
        "from": "server",
        "to": "server"
      },
      {
        "from": "server/node_modules",
        "to": "server/node_modules"
      }
    ],
    "icon": "icon/icon.png",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icon/icon.icns",
      "identity": null
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "icon/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "zip"
      ],
      "icon": "icon/icon.png"
    }
  }
}
